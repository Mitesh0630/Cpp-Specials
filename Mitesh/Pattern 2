#include<stdio.h>
#include<iostream>
using namespace std;
int main()
{
	int n,i,j,k,c=80;
	cout<<"enter the number"<<n<<"=";
	cin>>n;
	for(i=1;i<=n;i++)
	{
		for(j=1;j<=c/2-i;j++)
		{
			cout<<" ";
		}
		for(k=1;k<=2*i-1;k++)
		{
			cout<<"*";
		}
		cout<<"\n";
	}
	for(i=n;i>=1;i--)
	{
		for(j=1;j<=c/2-i;j++)
		{
			cout<<" ";
		}
		for(k=1;k<=2*i-1;k++)
		{
			cout<<"*";
		}
		cout<<"\n";
	}
      return 0;  
}
